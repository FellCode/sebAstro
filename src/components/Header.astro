  }

  #burgermenu {
    display: none;
    margin-left: auto;
  }

  header h2 {
    font-family: "Quicksand", sans-serif;
  }

  nav {
    display: flex;
    gap: 30px;
    white-space: nowrap;
  }

  nav li {
    list-style: none;
    position: relative;
  }

  nav > li > a {
    color: #fff;
    position: relative;
    text-decoration: none;
    display: inline-block;
    padding: 5px 0;
  }

  nav a {
    transition: transform 0.2s ease;
  }

  nav a:hover {
    transform: scale(1.05);
  }

  /* === Dropdown === */

  .has-dropdown .arrow {
    font-size: 0.8em;
    margin-left: 5px;
  }

  .has-dropdown .dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #fff;
    list-style: none;
    line-height: 30px;
    margin-top: 0.3rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0 7px 11px rgba(0, 0, 0, 0.2);
    min-width: 200px;
    z-index: 1000;
  }

  .has-dropdown:hover > .dropdown {
    display: block;
  }

  .has-dropdown .dropdown li a {
    display: block;
    width: 100%;
    padding: 10px;
    white-space: nowrap;
    color: #000;
    text-decoration: none;
  }

  .has-dropdown .dropdown::before {
    content: "";
    position: absolute;
    top: -8px;
    left: 20px;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-bottom: 8px solid #fff;
  }

  /* === Mobile Styles === */

  @media (max-width: 800px) {
    header {
      flex-direction: column;
      padding: 0;
      margin: 0;
    }

    nav {
      flex-direction: column;
      display: none;
      width: 100%;
      margin: 0;
      padding: 0;
    }

    nav li {
      align-self: center;
      text-align: center;
      border: 1px solid grey;
      background-color: #83cea5;
      margin: 0;
    }

    /* Dropdown-Links weiterhin schwarz */
    .has-dropdown .dropdown li a {
      color: #000;
      white-space: nowrap;
      padding: 10px;
      text-decoration: none;
    }

    #burgermenu {
      display: flex;
    }

    .has-dropdown .dropdown {
      position: static;
      box-shadow: none;
      border: none;
      margin-top: 0;
      background-color: transparent;
    }

    .has-dropdown .dropdown::before {
      display: none;
    }

    .has-dropdown .dropdown li {
      background-color: #b2e0cc;
      border-top: 1px solid #ccc;
    }

    .has-dropdown.open .dropdown {
      display: block;
    }
  }

  /* === Animation === */

  @keyframes fadein {
    100% {
      opacity: 1;
    }
  }
</style>

<script type="module" is:browser>
  function toggleDropdown(event) {
    event.preventDefault(); // Verhindert das Springen zum Link
    const parent = event.target.closest(".has-dropdown");
    parent.classList.toggle("open");
  }

  // Optional: Dropdowns schließen, wenn man woanders klickt
  document.addEventListener("click", function (event) {
    document.querySelectorAll(".has-dropdown").forEach((dropdown) => {
      if (!dropdown.contains(event.target)) {
        dropdown.classList.remove("open");
      }
    });
  });
</script>

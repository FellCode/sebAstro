---
import Layout from "../layouts/Layout.astro";
import ScrollIndicator from "../components/ScrollIndicator.astro";
---

<Layout>
  <section
    class="relative flex min-h-screen flex-col items-center justify-center text-center text-white"
  >
    <div class="absolute inset-0 -z-10 bg-cover bg-[#83cea5]"></div>
    <div class="mt-24">
      <h1
        class="text-[36px] sm:text-[60px] font-bold font-['Open_Sans'] mb-4 text-[#555]"
        ]
      >
        Unsere Social Media Kanäle
      </h1>
      <h3 class="text-[28px] font-normal font-['Open_Sans'] mb-5 text-[#555]">
        Auf folgenden Social Media Kanäle könnt ihr uns folgen oder uns
        abonnieren
      </h3>
    </div>
    <ScrollIndicator />
  </section>
  <section
    class="bg-[#d4ffe7] flex flex-col items-center px-6 sm:px-10 lg:px-20 py-24 text-center text-[#666]"
  >
    <div class="flex flex-col lg:flex-row justify-around m-8 gap-12">
      <div class="card bg-[#83cea5] shadow-sm">
        <figure class="p-8">
          <img
            src={`${import.meta.env.BASE_URL}assets/img/qr-instagram.png`}
            alt="QR-Code für das Instagram Profil"
            class="max-w-64 rounded-md"
          />
        </figure>
        <hr
          class="w-48 h-[2px] mx-auto bg-gray-100 border-0 rounded-sm dark:bg-[#555]"
        />
        <div class="card-body">
          <h2 class="card-title">Instagram</h2>
          <p class="max-w-96 text-left">
            Scan den QR-Code oder klick auf den Button um unser Instagram Profil<br
            />
            zu besuchen und uns für qualitatitv Hochwertige Bilder und Stories zu
            abonnieren
          </p>
          <div class="card-actions justify-end">
            <button class="btn btn-error"
              ><a href="https://instagram.com" target="_blank">Instagram</a
              ></button
            >
          </div>
        </div>
      </div>

      <div class="card bg-[#83cea5] shadow-sm">
        <figure class="p-8">
          <img
            src={`${import.meta.env.BASE_URL}assets/img/qr-facebook.png`}
            alt="QR-Code für das Facebook Profil"
            class="max-w-64 rounded-md"
          />
        </figure>
        <hr
          class="w-48 h-[2px] mx-auto bg-gray-100 border-0 rounded-sm dark:bg-[#555]"
        />
        <div class="card-body">
          <h2 class="card-title">Facebook</h2>
          <p class="max-w-96 text-left">
            Scan den QR-Code oder klick auf den Button um unser Instagram Profil<br
            />
            zu besuchen und uns für qualitatitv Hochwertige Bilder und Stories zu
            abonnieren
          </p>
          <div class="card-actions justify-end">
            <button class="btn btn-info"
              ><a href="https://instagram.com" target="_blank">Facebook</a
              ></button
            >
          </div>
        </div>
      </div>

      <div class="card bg-[#83cea5] shadow-sm">
        <figure class="p-8">
          <img
            src={`${import.meta.env.BASE_URL}assets/img/qr-tiktok.png`}
            alt="QR-Code für das TikTok Profil"
            class="max-w-64 rounded-md"
          />
        </figure>
        <hr
          class="w-48 h-[2px] mx-auto bg-gray-100 border-0 rounded-sm dark:bg-[#555]"
        />
        <div class="card-body">
          <h2 class="card-title">TikTok</h2>
          <p class="max-w-96 text-left">
            Scan den QR-Code oder klick auf den Button um unser Instagram Profil<br
            />
            zu besuchen und uns für qualitatitv Hochwertige Bilder und Stories zu
            abonnieren
          </p>
          <div class="card-actions justify-end">
            <button class="btn btn-neutral"
              ><a href="https://instagram.com" target="_blank">TikTok</a
              ></button
            >
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
